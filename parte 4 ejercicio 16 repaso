        let palabraMayus = palabraOtraMitad.toUpperCase()




        let palabraMitad = palabra.substring((palabraLongitud/2))

        let palabraMinus = palabraMitad.toLowerCase()

        


        let palabraMinusMayus = palabra.replaceAll(palabra, (palabraMayus + palabraMinus))

        console.log(palabraMinusMayus)



